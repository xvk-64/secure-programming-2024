{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",

    "composite": true,

    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
//    "verbatimModuleSyntax": true,

    "types": ["node"],

    "incremental": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
  }
}